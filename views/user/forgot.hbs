<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Recuperar senha</h1>
        <form action="/forgot" method="POST" id="form_validator" class="form_forgot">
            {{#if messages.error}}
                    <div class="alert alert-danger">{{messages.error}}</div>
            {{/if}}
            {{#if messages.info}}
                    <div class="alert alert-info">{{messages.info}}</div>
            {{/if}} 
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="text" id="email" name="email" class="form-control" >
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-primary botao-enviar">Recuperar senha</button>
            <a href="/signin">Fazer login</a>
        </form>
        <br><br><br><br><br><br><br>
    </div>
</div>