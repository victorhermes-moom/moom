<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Entrar</h1>
        <form action="/signin" method="POST" id="form_validator">
            {{#if messages.error}}
                    <div class="alert alert-danger">{{messages.error}}</div>
            {{/if}} 
            {{#if messages.info}}
                    <div class="alert alert-info">{{messages.info}}</div>
            {{/if}} 
            {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{# each messages2 }}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
            {{/if}}
            
            
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="text" id="email" name="email" class="form-control" value="{{form.email}}">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-primary botao-enviar">Entrar</button>
            <a href="/signup">Cadastrar</a>
            <a href="/forgot">Recuperar senha</a>
        </form>
    </div>
</div>